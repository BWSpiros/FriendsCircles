<form action="<%= url %>" method="post">

  <input  type="hidden"
          name="_method"
          value="<%= method || "post" %>">

  <input  type="hidden"
          name="authenticity_token"
          value="<%= form_authenticity_token %>">

<p>
  <label>Email:
    <input name="user[email]" type="email" value="<%= @user.email %>">
  </label>
</p>
<p>
  <label>Password:
    <input name="user[password]" type="password">
  </label>
</p>
<p>
  <input type="submit">
</form>